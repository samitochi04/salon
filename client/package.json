{
  "name": "client",
  "version": "1.0.0",
  "description": "Beauty salon client powered by HTMX and Tailwind CSS",
  "scripts": {
    "dev": "npm-run-all --parallel css:watch static:serve",
    "static:serve": "npx live-server public --watch=public",
    "css:watch": "tailwindcss -i ./src/styles/tailwind.css -o ./public/assets/tailwind.css --watch",
    "css:build": "tailwindcss -i ./src/styles/tailwind.css -o ./public/assets/tailwind.css --minify",
    "build": "npm run css:build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.2.1",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.13"
  }
}
